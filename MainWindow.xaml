<Window x:Class="Part3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Part3"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Fill="#707070"/>

        <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Recipe App" VerticalAlignment="Top" Height="52" Width="283" FontSize="40" FontFamily="Arial Black"/>


        <Grid Margin="0,0,0,-5"  Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="30*"/>

            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="1" Fill="#707070" />
            <Rectangle Grid.Column="0" Fill="#989898" />
            <Rectangle Grid.Column="2" Fill="#989898" />
            <TextBlock Grid.Column="0" Name="textBlockRecNum"  HorizontalAlignment="Left" Margin="36,44,0,0" TextWrapping="Wrap" Text="Enter Number Of Recipes:" VerticalAlignment="Top" Cursor="AppStarting"/>
            <TextBox   Name="recNum" HorizontalAlignment="Left" Margin="36,78,0,0" TextWrapping="Wrap" Text="No." VerticalAlignment="Top" Width="136" Grid.Column="0" />
            <Button    Name="enter" Content="Enter" HorizontalAlignment="Left" Margin="36,197,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click" Grid.Column="0" />
            <TextBlock Name="textBlockIngNum" HorizontalAlignment="Left" Margin="36,115,0,0" TextWrapping="Wrap" Text="Enter Number Of Ingrediants:" VerticalAlignment="Top" Grid.Column="0" />
            <TextBox   Name="ingNum" HorizontalAlignment="Left" Margin="36,151,0,0" TextWrapping="Wrap" Text="No." VerticalAlignment="Top" Width="136" Grid.Column="0"  />

            <TextBlock Name="textBoxRecipeName" HorizontalAlignment="Left" Margin="36,44,0,0" TextWrapping="Wrap" Text="Enter Recipe Name:" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <TextBox   Name="recipeName" HorizontalAlignment="Left" Margin="36,69,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed" />
            <TextBlock Name="textBoxIngrediantName" HorizontalAlignment="Left" Margin="36,162,0,0" TextWrapping="Wrap" Text="Enter Name Of Ingrediant:" VerticalAlignment="Top" RenderTransformOrigin="0.475,2.152" Grid.Column="0" Visibility="Collapsed"/>
            <TextBox   Name="ingrediantName" HorizontalAlignment="Left" Margin="36,184,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <Button    Name="buttonRecipeName" Content="Enter" HorizontalAlignment="Left" Margin="36,92,0,0" VerticalAlignment="Top" Width="120" Click="buttonRecipeName_Click" Grid.Column="0" Visibility="Collapsed"/>
            <TextBlock Name="textBoxEnterRecipe" HorizontalAlignment="Left" Margin="36,141,0,0" TextWrapping="Wrap" Text="Enter Recipe" VerticalAlignment="Top" Grid.Column="0" Visibility="Collapsed" />
            <TextBlock Name="textBoxQuantity" HorizontalAlignment="Left" Margin="36,218,0,0" TextWrapping="Wrap" Text="Enter Quantity Of Ingrediant:" VerticalAlignment="Top" Grid.Column="0" Visibility="Collapsed"/>
            <TextBox   Name="ingrediantQuantity" HorizontalAlignment="Left" Margin="36,240,0,0" TextWrapping="Wrap" Text="Quantity" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <TextBlock Name="textBoxMeasurement" HorizontalAlignment="Left" Margin="36,274,0,0" TextWrapping="Wrap" Text="Enter Ingrediant Measurement:" VerticalAlignment="Top" Grid.Column="0" Visibility="Collapsed"/>
            <TextBox   Name="ingrediantMeasurement" HorizontalAlignment="Left" Margin="36,296,0,0" TextWrapping="Wrap" Text="Measurment" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <TextBlock Name="textBoxFoodGroup" HorizontalAlignment="Left" Margin="235,162,0,0" TextWrapping="Wrap" Text="Enter Food Group:" VerticalAlignment="Top" Grid.Column="0" Visibility="Collapsed"/>
            <TextBlock Name="textBoxCalories" HorizontalAlignment="Left" Margin="235,218,0,0" TextWrapping="Wrap" Text="Enter Number Of Calories:" VerticalAlignment="Top" Grid.Column="0" Visibility="Collapsed"/>
            <TextBox   Name="ingrediantFoodGroup" HorizontalAlignment="Left" Margin="235,184,0,0" TextWrapping="Wrap" Text="Food Group" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <TextBox   Name="ingrediantCalories" HorizontalAlignment="Left" Margin="234,240,0,0" TextWrapping="Wrap" Text="Calories" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <TextBlock Name="textBoxNumSteps" HorizontalAlignment="Left" Margin="234,274,0,0" TextWrapping="Wrap" Text="Enter Number Of Steps:" VerticalAlignment="Top" RenderTransformOrigin="0.511,1.867" Grid.Column="0"  Visibility="Collapsed"/>
            <TextBox   Name="ingrediantNumSteps" HorizontalAlignment="Left" Margin="234,296,0,0" TextWrapping="Wrap" Text="No." VerticalAlignment="Top" Width="120" Grid.Column="0"  Visibility="Collapsed"/>
            <Button    Name="enterRecipe" Content="Enter" HorizontalAlignment="Left" Margin="234,339,0,0" VerticalAlignment="Top" Width="120" Click="enterRecipe_Click" Grid.Column="0" Visibility="Collapsed" />
            <Button    Name="print" Content="Print" HorizontalAlignment="Left" Margin="234,361,0,0" VerticalAlignment="Top" Width="120" Click="print_Click_1" Grid.Column="0" Visibility="Collapsed"/>
            <ListView  Name="listBox" Margin="150,102,0,17" Height="500" Width="250" Grid.Column="3"/>
            <TextBlock Name="textBoxSteps" HorizontalAlignment="Left" Margin="36,336,0,0" TextWrapping="Wrap" Text="Enter Steps" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <TextBox   Name="steps" HorizontalAlignment="Left" Margin="36,361,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Grid.Column="0" Visibility="Collapsed"/>
            <Button    Name="enterSteps" Content="Enter" HorizontalAlignment="Left" Margin="36,384,0,0" VerticalAlignment="Top" Width="120" Click="enterSteps_Click" Grid.Column="0" Visibility="Collapsed"/>

            <TextBox   Name="ingrediantScale" HorizontalAlignment ="Left" Margin="36,149,0,0" TextWrapping="Wrap" Text="Scale" VerticalAlignment="Top" Width="120"  Grid.Column="1" Visibility="Collapsed"/>
            <Button    Name="enterScale"      Content="Enter" HorizontalAlignment="Left" Margin="36,177,0,0" VerticalAlignment="Top" Height="25" Width="120"  Grid.Column="1" Click="enterScale_Click" Visibility="Collapsed"/>
            <TextBlock Name="textBoxScale"   HorizontalAlignment="Left" Margin="36,102,0,0" TextWrapping="Wrap" Text="Would you like to (1)double &#x0d;&#x0a;or (2)half or (3)triple your scale" VerticalAlignment="Top" Height="41" Width="181"  Grid.Column="1" Visibility="Collapsed"/>
            <TextBlock Name="textBoxSearch" HorizontalAlignment="Left" Margin="36,221,0,0" TextWrapping="Wrap" Text="Search For Recipe" VerticalAlignment="Top"  Grid.Column="1" Visibility="Collapsed"/>
            <TextBox   Name="searchItem"    HorizontalAlignment="Left" Margin="36,242,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120" Grid.Column="1" Visibility="Collapsed"/>
            <Button    Name="searchButton" Content="Search" HorizontalAlignment="Left" Margin="36,274,0,0" VerticalAlignment="Top" Height="20" Width="120"  Grid.Column="1" Click="searchButton_Click" Visibility="Collapsed"/>
            <Button    Name="resetScale" Grid.Column="1" Content="Reset" HorizontalAlignment="Left" Margin="36,329,0,0" VerticalAlignment="Top" Height="20" Width="120" Click="resetScale_Click_1" Visibility="Collapsed"/>
            <TextBlock Name="textBoxReset" Grid.Column="1" HorizontalAlignment="Left" Margin="36,307,0,0" TextWrapping="Wrap" Text="Reset The Scale" VerticalAlignment="Top" Height="20" Width="120" Visibility="Collapsed"/>
            <TextBlock Name="textBoxResetRecipe" Grid.Column="1" HorizontalAlignment="Left" Margin="36,353,0,0" TextWrapping="Wrap" Text="Reset recipes" VerticalAlignment="Top" Visibility="Collapsed"/>
            <Button    Name="resetRecipe" Grid.Column="1" Content="Reset" HorizontalAlignment="Left" Margin="36,375,0,0" VerticalAlignment="Top" Height="20" Width="120" Click="Button_Click_1" Visibility="Collapsed"/>
            <TextBlock Name="textBoxFilter" Grid.Column="1" HorizontalAlignment="Left" Margin="200,149,0,0" TextWrapping="Wrap" Text="Filter" VerticalAlignment="Top" Height="20" Width="94"  Visibility="Collapsed"/>
            <TextBlock Name="textBoxFilterItem" Grid.Column="1" HorizontalAlignment="Left" Margin="200,171,0,0" TextWrapping="Wrap" Text="Filter By Ingrediants Or Food Group" VerticalAlignment="Top" RenderTransformOrigin="-0.11,0.439" Width="194"  Visibility="Collapsed"/>
            <TextBox   Name="filterItem" Grid.Column="1" HorizontalAlignment="Left" Margin="200,193,0,0" TextWrapping="Wrap" Text="Filter" VerticalAlignment="Top" Width="120" Visibility="Collapsed"/>
            <TextBlock Name="textBoxMax" Grid.Column="1" HorizontalAlignment="Left" Margin="200,237,0,0" TextWrapping="Wrap" Text="Filter By Max Calories" VerticalAlignment="Top"  Visibility="Collapsed"/>
            <Button    Name="enterFilterItem" Grid.Column="1" Content="Confirm Filter" HorizontalAlignment="Left" Margin="200,215,0,0" VerticalAlignment="Top" Width="120" Click="enterFilterItem_Click"  Visibility="Collapsed"/>
            <Button    Name="maxItem" Grid.Column="1" Content="Max" HorizontalAlignment="Left" Margin="200,258,0,0" VerticalAlignment="Top" Height="25" Width="120" Click="maxItem_Click"  Visibility="Collapsed"/>
            <TextBlock HorizontalAlignment="Left" Margin="36,0,0,0" TextWrapping="Wrap" Text="Ingredients" VerticalAlignment="Top" Height="27" Width="287" FontFamily="Algerian" FontSize="20"/>
            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="79,6,0,0" TextWrapping="Wrap" Text="Customise" VerticalAlignment="Top" Height="21" Width="205" FontFamily="Algerian" FontSize="20"/>
            <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="39,6,0,0" TextWrapping="Wrap" Text="View" VerticalAlignment="Top" Height="23" Width="236" FontFamily="Algerian" FontSize="20"/>









        </Grid>
    </Grid>


</Window>
